mixin categoryDesktopFilter()
  div.filter(
    class="w-full " +
    "grid grid-cols-1 " +
    "divide-y-2 divide-white " +
    "border-2 border-white " +
    "px-2"
  )

    div.fiter-price.py-2
      label(
        for="price_min" class="block text-sm font-medium text-gray-700"
      ) Цена
      div(
        class="mt-1 flex rounded-md shadow-sm"
      )
        input(
          type="text" name="price_min" id="price_min"
          class="" +
          "flex-1 block " +
          "w-full h-6 " +
          "px-2 " +
          "text-sm " +
          "border border-border-400 " +
          "rounded-none rounded-l-md " +
          "focus:ring-indigo-200 " +
          "focus:border-indigo-200 "
          placeholder="от"
        )
        input(
          type="text" name="price_max"
          class="" +
          "flex-1 block " +
          "w-full h-6 " +
          "px-2 " +
          "text-sm " +
          "border border-border-400 " +
          "rounded-none rounded-r-md " +
          "focus:ring-indigo-200 " +
          "focus:border-indigo-200 "
          placeholder="до"
        )


    div.filter-publish.py-2
      fieldset
        div
          legend(class="text-base font-medium text-gray-700") Срок размещения
        div(class="mt-4 space-y-4")
          div(class="flex items-center")
            input(id="push_everything" name="push_notifications" type="radio" class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300")
            label( for="push_everything" class="ml-3 block text-sm font-medium text-gray-700") За 24 часа
        div(class="flex items-center")
          input(id="push_email" name="push_notifications" type="radio" class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300")
          label(for="push_email" class="ml-3 block text-sm font-medium text-gray-700") За 7 дней
        div( class="flex items-center")
          input( id="push_nothing" name="push_notifications" type="radio" class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300")
          label( for="push_nothing" class="ml-3 block text-sm font-medium text-gray-700") За все время

