include ../../cards/card

mixin gridNxN(mock)
  div.gridNxN(
    class="" +
    "grid grid-flow-row grid-rows-auto "
  )
    div.gridNxN-title
      p.font-bold.text-lg.mb-4 Все товары

    div.gridNxN-desc(
      class="" +
      "grid grid-cols-2 gap-4 " +
      "md:grid-cols-3 " +
      "lg:grid-cols-4 "
      )
      for item in mock
        +card(item)
