mixin searchbar()
  .mob_search_panel.container.flex.flex-row.px-4.h-8
    .flex-auto.relative.rounded-sm.shadow-sm.h-full
      .absolute.inset-y-0.left-0.pl-2.flex.items-center.pointer-events-none
        span.text-gray-500
          +icon-ion('search', 'text-xl mt-1.5')
      input(
        type="text"
        name="price"
        id="price"
        class="focus:ring-indigo-500 focus:border-indigo-500 block bg-gray-100 w-full h-full pl-8 pr-12 sm:text-sm border-gray-300 rounded-sm"
        placeholder="Искать"
      )
