mixin headerMain()
  .navigation_search(
    class="" +
    "container " +
    "grid grid-cols-12 gap-4 " +
    "relative " +
    "px-4 h-10"
    )
    .navigation_search-logo.col-span-2.h-full
      a(href="/dist")
        img.block.h-full(
          src="/dist/images/logo.png"
        )

    .navigation_search-category_button.col-span-2.px-1
      button(
        id="category-show-button"
        data-ref="navigation_search-category_button-dropdown"
        class="" +
        "col-span-2 inline-flex justify-center relative " +
        "w-full h-full pl-6 pr-1 py-2 " +
        "border border-gray-300 rounded " +
        "shadow-sm " +
        "bg-white " +
        "text-sm font-medium text-gray-700 " +
        "hover:bg-gray-50 " +
        "focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-indigo-500"
      )
        +icon-ion('grid-outline', 'absolute left-2.5 top-2/4 transform -translate-y-2/4 text-lg')
